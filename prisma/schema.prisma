generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Supabase Auth と連携するユーザー情報
model UserProfile {
  id          String   @id // Supabase auth.users.id に対応
  email       String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  usageCount  UsageCount?
  userItems   UserItem[]
  userFlags   UserFlag[] // 互換性維持
  preference  UserPreference?
}

// 日ごとの使用回数管理
model UsageCount {
  id        String   @id @default(uuid())
  userId    String   @unique
  total     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user UserProfile @relation(fields: [userId], references: [id])
}

// 制限対象のマスタ（アレルギー・ハラルなど）
model RestrictedItem {
  id        String   @id @default(uuid())
  name      String
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userItems UserItem[]
}

// ユーザーごとの制限設定
model UserItem {
  id               String         @id @default(uuid())
  userId           String
  restrictedItemId String

  user           UserProfile    @relation(fields: [userId], references: [id])
  restrictedItem RestrictedItem @relation(fields: [restrictedItemId], references: [id])
}

// ユーザーとFlagの中間テーブル（旧構成と互換性のため保持）
model UserFlag {
  id      String @id @default(uuid())
  userId  String
  flagId  String

  user UserProfile @relation(fields: [userId], references: [id])
  flag Flag        @relation(fields: [flagId], references: [id])
}

// ハラル・アレルギーの種類マスタ（旧構成と互換性のため保持）
model Flag {
  id        String     @id @default(uuid())
  name      String     @unique  // 例：「ハラル」「アレルギー」
  createdAt DateTime   @default(now())
  userFlags UserFlag[]
}

// ユーザープリファレンス（表示制御用）
model UserPreference {
  id           String   @id @default(uuid())
  userId       String   @unique
  wantsHalal   Boolean  @default(true)
  wantsAllergy Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user UserProfile @relation(fields: [userId], references: [id])
}
